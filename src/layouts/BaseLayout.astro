---
import "../styles/global.css";
const { title, description } = Astro.props;
const pageTitle = title ? `${title} | Example Corp` : "Example Corp";
const pageDesc =
  description ??
  "Example Corp is a fictional corporate site demo powered by Astro + remark-dl-list + remark-pipe-table.";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDesc} />
  </head>
  <body>
    <header>
      <div class="brand">
        <div class="brand-title">
          <h1>Example Corp</h1>
          <small>Astro + remark plugins demo</small>
        </div>

        <a
          href="https://github.com/kanemu/sample-astro-remark-corporate-site"
          class="github-link"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="View source on GitHub"
        >
          GitHub
        </a>
      </div>
      <nav>
        <a href="/">Home</a>
        <a href="/company">Company</a>
        <a href="/services">Services</a>
        <a href="/pricing">Pricing</a>
        <a href="/faq">FAQ</a>
        <a href="/contact">Contact</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <small>Â© {new Date().getFullYear()} Example Corp</small>
    </footer>
  </body>
</html>
